<div>
    {{{lgpd_text}}}

    <form method="post" action="?" style="margin-left: 20px">

        <div><label for="motivo" style="font-weight:bold">Nome completo:</label>
            {{{user_fullname}}}
        </div>

        <div><label for="motivo" style="font-weight:bold">E-mail cadastrado:</label>
            {{{user_email}}}
        </div>

        <div><label for="motivo" style="font-weight:bold">Motivo da exclusão:</label> <br>
            <textarea name="motivo" id="motivo" style="width: 100%; min-height: 120px"></textarea>
        </div>
        <div><input type="submit" value="Enviar solicitação"></div>
        <input type="hidden" name="sesskey" id="sesskey">
    </form>
</div>

{{#js}}
    //
    <script>
        require(['jquery', "core/notification"], function($, Notification) {
            $("#sesskey").val("{{{sesskey}}}")
        });
{{/js}}